<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/spacecartoonwallpapers"
    android:layout_height="match_parent"
    tools:context="com.example.spaceheist.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_200">

        <TextView
            android:id="@+id/score_lb"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Score: "
            android:textColor="#fff"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/pause_lb"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:backgroundTint="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_action_pause"
            android:onClick="pauseGame" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/diamond"
            android:layout_toLeftOf="@id/pause_lb"
            android:layout_marginRight="5dp"
            android:id="@+id/imgdiamond"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/imgdiamond"
            android:text=" "
            android:textColor="#fff"
            android:textStyle="bold" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to start"
            android:textStyle="bold"
            android:background="@color/teal_200"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:id="@+id/startLb"
            android:layout_marginTop="50sp"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/player"
            android:layout_width="67dp"
            android:layout_height="61dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/player1" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/food"
            android:src="@drawable/food"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/enemy1"
            android:src="@drawable/enemy1"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/enemy2"
            android:src="@drawable/enemy2"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/diamond"
            android:src="@drawable/diamond"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frame_lb">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/pausebutton"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="250dp"/>

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/white"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_action_start"
                android:layout_marginTop="300dp"
                android:onClick="pauseGame"
                android:id="@+id/start_lb"/>

        </FrameLayout>

    </FrameLayout>

</LinearLayout>
